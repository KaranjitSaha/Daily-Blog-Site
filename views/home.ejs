<%- include("partials/header.ejs"); %>
    <%posts.forEach(function(post){%>
        <h1>
            <%=post.title%>
        </h1>
        <%if(post.title=="Home"){%>
            <p>
                <%=post.body%>
            </p>
            <%}else{%>
                <p>
                    <%=post.body.substring(0,100);%> ... <a href=<%="/posts/" +post.title%>> Read more</a>
                </p>
                <%}%>
    <%})%>
<%- include("partials/footer.ejs"); %>